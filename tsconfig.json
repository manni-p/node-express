{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./build/",
        "moduleResolution": "node",
        "baseUrl": "."
    },
    "include": ["./src/**/*", "../managers/src/test_helpers"],
    "exclude": ["node_modules"]
}
